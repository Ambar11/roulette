<%- include("header") %>
    <style>
        .modal-body {
            overflow-x: auto;
        }
    </style>
    <div id="content" class="main-content">
        <% data.map((user,i)=>{  %>

            <div class="modal fade" id="u<%=user.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">ID:
                                <%=user.id%>
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
                        </div>
                        <div class="modal-body">
                            <div class="widget-content widget-content-area" style="overflow-x: auto;">

                                <table id="style-3<%=user.id%>" class="table style-3">
                                    <thead>
                                        <tr class="checkbox-column text-center">
                                            <th class="checkbox-column text-center"> Game Id </th>
                                            <th>Date</th>
                                            <th>Number</th>
                                            <th>Coins</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% user["bets"].map((userD)=>{ %>
                                            <tr class="checkbox-column text-center">
                                                <td class="checkbox-column text-center">

                                                    <%= userD.game_id%>

                                                </td>

                                                <td>
                                                    <%= userD.date%>
                                                </td>
                                                <td>
                                                    <%=userD.number%>
                                                </td>
                                                <td>
                                                    <%=userD.points%>
                                                </td>

                                                <td>
                                                    <% if(userD.status == 0) {%>
                                                        <span class="shadow-none badge badge-primary">Ongoing</span>
                                                        <%}else if(userD.status == 1) {%>
                                                            <span class="shadow-none badge badge-warning">Paused</span>
                                                            <%  }else{ %>
                                                                <span class="shadow-none badge badge-danger">Closed</span>
                                                                <% }%>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> Discard</button>

                        </div>
                    </div>
                </div>
            </div>
            <% }); %>

                <div class="layout-px-spacing">
                    <div class="row layout-spacing">
                        <div class="col-lg-12">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>User History</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content widget-content-area">
                                    <div class="table-responsive mb-4">
                                        <table id="style-3" class="table style-3  table-hover">
                                            <thead>
                                                <tr class="checkbox-column text-center">
                                                    <th class="checkbox-column text-center"> User Id </th>
                                                    <th>Phone No.</th>
                                                    <th>Total Coins</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.map((user,i)=>{  %>

                                                    <tr class="checkbox-column text-center">
                                                        <td class="checkbox-column text-center">
                                                            <a data-toggle="modal" data-target="#u<%=user.id%>">
                                                                <%= user.id%>
                                                            </a>
                                                        </td>

                                                        <td>
                                                            <a data-toggle="modal" data-target="#u<%=user.id%>">
                                                                <%= user.username%>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a data-toggle="modal" data-target="#u<%=user.id%>">
                                                                <%=user.points%>
                                                            </a>
                                                        </td>



                                                    </tr>


                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <%- include("footer") %>